<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:gravity="center_vertical"
    android:minHeight="25dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/recvNameText"
            style="@style/valueTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/gotham"
            android:text="Avinaba Ray A df fd sadsad sdsad asdas asdas asdsa asdas a s d s  d s das asdas asd asd as" />

        <ImageView
            android:id="@+id/checkedImage"
            android:layout_width="23dp"
            android:paddingLeft="1.5dp"
            android:paddingRight="1.5dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_double_check"
            android:tint="@color/dark_green"
            android:visibility="visible"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/recvAgeGenderText"
        style="@style/valueTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham"
        android:text="20, M"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/recvCallCard"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
        app:cardBackgroundColor="@color/dark_green"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingTop="0dp"
            android:paddingRight="3dp"
            android:paddingBottom="0dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:padding="3dp"
                android:src="@drawable/ic_call_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:text="CALL"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>